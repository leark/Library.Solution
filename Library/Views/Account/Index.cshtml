@{
  Layout = "_Layout";
}
@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOut", "Account"))
  {
    <input type="submit" class="btn btn-warning" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}
<hr />

<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>

